extends layout

block content  
    main 
        p.welcome Hello #{currentUser.first_name}, great to have you here.
        p.instruction Click the button below to buy your favourite cryptocurrency.
        br
        a(href=`/user/${currentUser._id}/buy` class="buy_coin") Buy Coin
        .available_coin
            p Available coins
        .currency
            .crypto_card 
                div 
                    img(src="/images/btc.png" alt="Bitcoin")
                div 
                    p Pair: BTC/NGN
                    p Price: NGN 22,328,962.50
            .crypto_card 
                div 
                    img(src="/images/eth.png" alt="Ethereum")
                div 
                    p Pair: ETH/NGN
                    p Price: NGN 1,364,632.50
        .section
            h2.title Pending transactions
            if pending.length === 0
                p No pending transaction
            else
                #table_container
                    table
                        thead
                            tr
                                th S/N
                                th Coin
                                th Amount
                                //- th Wallet Address
                                //- th Payment Screenshot
                                th Status
                                th Screenshot
                        tbody
                            each transaction, index in pending
                                tr
                                    td #{index + 1}
                                    td #{transaction.crypto}
                                    td #{transaction.amount}
                                    //- td= transaction.walletAddress
                                    //- td
                                    //-   img(
                                    //-     width="60px"
                                    //-     href="Payment Screenshot"
                                    //-     src=`/images/${transaction.paymentScreenshot}` 
                                    //-   )
                                    td= transaction.status
                                    td #[a(href="/") View Details]

        .section
            h2.title Completed transactions
            if completed.length === 0
                p No completed transaction yet.
            else
                table
                    thead
                        tr
                            th Transaction ID
                            th Amount
                            th Wallet Address
                            th Payment Screenshot
                            th Status
                    tbody
                        each transaction in completed
                            tr
                                td= transaction._id
                                td #{transaction.amount}
                                td= transaction.walletAddress
                                //- td
                                //-   img(
                                //-     width="25px"
                                //-     href="Payment Screenshot"
                                //-     src=`/images/${transaction.paymentScreenshot}` 
                                //-   )
                                td= transaction.status