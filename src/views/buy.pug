extends layout

block content
  main
    form(
      action="", method='post' 
      enctype="multipart/form-data"
    )
      div
        label(for='crypto') Select a coin:
        select(name="crypto")
          option(value="BTC" selected) BTC
          option(value="ETH") ETH

      div
        label(for='amount') Amount:
        input(type='number', name='amount', required)

      div
        label(for='walletAddress') Wallet Address:
        input(type='text', name='walletAddress', required)

      div
        label(for='paymentScreenshot') Payment Screenshot:
        input(type='file', name='paymentScreenshot', accept="image/*" required)
      button(type='submit') Submit