doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet" href=`/styles/header.css`)
    if style
      link(rel="stylesheet" href=`/styles/${style}.css`)
    if login_sub_style
      link(rel="stylesheet" href=`/styles/${login_sub_style}.css`)
    link(rel="stylesheet" href=`/styles/globalStyle.css`)
    title= title
  body
    header
      div
        a(href="/")
          h1 Snappy#[span Ex]change 
        nav 
          a(href="/") Home
          a(href="/sign-up") Sign Up
        if currentUser
          div 
            p Hi #{currentUser.first_name} | #[a(href="/log-out") Log Out]

    block content